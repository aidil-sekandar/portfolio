---
import BaseLayout from "@/layouts/BaseLayout.astro";
import "@/styles/content.css";
import { getCollection } from "astro:content";
import { formatDate } from "@/utils/formatDate";
import { Form } from "@/components/Form";
import Header from "@/components/Header.astro";

export async function getStaticPaths() {
  const allPosts = await getCollection("article");
  return allPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<BaseLayout>
  <Header />
  <section class="max-w-[45rem] mx-auto px-4 pt-32 mb-16">
    <div class="grid justify-center gap-4 mb-10">
      <div class="flex justify-center gap-4">
        {
          post.data.tags.map((tag) => {
            return (
              <span class="block w-max py-1 px-4 rounded bg-[#ffffff20] text-white">{tag}</span>
            );
          })
        }
      </div>
      <h1 class="text-4xl font-bold text-white text-center">{post.data.title}</h1>

      <div class="flex justify-center">
        <time>{formatDate(post.data.pubDate)}</time>
      </div>
    </div>
    <main class="content grid gap-6 px-4 text-[#ffffffcb]">
      <Content />
    </main>
    <div class="mt-8">
      <h2 class="text-xl font-semibold mb-4">Leave a Comment</h2>
      <Form />
    </div>
  </section>
</BaseLayout>
