---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import { filterArticles } from "@/utils/filterArticles";
import { fetchMediumPosts } from "@/utils/medium";
import Header from "@/components/Header.astro";
import ArticleWindow from "@/components/ArticleWindow";
import Projects from "@/components/Projects.astro";

const allMedium = await fetchMediumPosts();
const allArticlesFresh = await getCollection("article");
const allArticles = await filterArticles(allArticlesFresh, "recent", null);
