    <section class="mt-16">
      <h2 class="text-white text-3xl font-semibold mb-4">Recent Projects</h2>
      <div class="grid sm:grid-cols-2 gap-5">
        <Projects
          img="siri-angkasawan-malaysia"
          name="Siri Angkasawan Malaysia"
          description="Siri Angkasawan Malaysia is a series of articles that explores the historic journey of Malaysia’s astronaut program."
          techList={[]}
          link="https://aidiliskandar.space/article/"
          type="Article Series"
        />
        <Projects
          img="study-with-aidil"
          name="Study With Aidil"
