---
const { img, status, name, description, techList, github = "", link = "" } = Astro.props;
---

<div class="py-8 grid md:grid-cols-2 gap-8 items-center">
  <div class="relative">
    <div class="absolute top-3 left-5 bg-[rgb(10,25,47)] py-1 px-2 rounded">
      <p class="text-white flex items-center gap-2">
        {status}
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class={`${status == "Online" ? "text-emerald-400" : "text-amber-300"}`}
          width="1.5em"
          height="1.5em"
          viewBox="0 0 2048 2048"
        >
          <rect width="2048" height="2048" fill="none"></rect>
          <path
            fill="currentColor"
            d="M1024 640q79 0 149 30t122 82t83 123t30 149q0 80-30 149t-82 122t-123 83t-149 30q-80 0-149-30t-122-82t-83-122t-30-150q0-79 30-149t82-122t122-83t150-30"
          ></path>
        </svg>
      </p>
    </div>
    <img
      class="border-2 border-themePrimary rounded"
      loading="lazy"
      src={`./assets/${img}.png`}
      alt="The TEX Project"
    />
  </div>
  <div>
    <h3 class="text-xl font-semibold text-themePrimary">Featured Project</h3>
    <h2 class="text-3xl font-bold text-white mb-4">{name}</h2>
    <div class="bg-[#112240] p-4 mb-4">
      <p>{description}</p>
    </div>
    <ul class="flex gap-4 mb-3">
      {
        techList.map((tech) => {
          return <li class="hover:text-themePrimary">{tech}</li>;
        })
      }
    </ul>
    {}
    <ul class="flex gap-4">
      {
        link && (
          <li>
            <a class="hover:text-themePrimary" href={link} target="_blank">
              <svg xmlns="http://www.w3.org/2000/svg" width="2em" height="2em" viewBox="0 0 24 24">
                <rect width="24" height="24" fill="none" />
                <path
                  fill="none"
                  stroke="currentColor"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13.5 10.5L21 3m-5 0h5v5m0 6v5a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5"
                />
              </svg>
            </a>
          </li>
        )
      }
      {
        github && (
          <li>
            <a class="hover:text-themePrimary" href={github} target="_blank">
              <svg xmlns="http://www.w3.org/2000/svg" width="2em" height="2em" viewBox="0 0 24 24">
                <rect width="24" height="24" fill="none" />
                <path
                  fill="currentColor"
                  d="M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5c.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34c-.46-1.16-1.11-1.47-1.11-1.47c-.91-.62.07-.6.07-.6c1 .07 1.53 1.03 1.53 1.03c.87 1.52 2.34 1.07 2.91.83c.09-.65.35-1.09.63-1.34c-2.22-.25-4.55-1.11-4.55-4.92c0-1.11.38-2 1.03-2.71c-.1-.25-.45-1.29.1-2.64c0 0 .84-.27 2.75 1.02c.79-.22 1.65-.33 2.5-.33s1.71.11 2.5.33c1.91-1.29 2.75-1.02 2.75-1.02c.55 1.35.2 2.39.1 2.64c.65.71 1.03 1.6 1.03 2.71c0 3.82-2.34 4.66-4.57 4.91c.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2"
                />
              </svg>
            </a>
          </li>
        )
      }
    </ul>
  </div>
</div>
